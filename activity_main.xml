<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bs"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText

        android:id="@+id/weightkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:capitalize="characters"
        android:ems="10"
        android:hint="@string/hint_wt"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#0F3733"
        android:textColorHint="#74000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/heigthft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hint_ft"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#0F3733"
        android:textColorHint="#74000000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/heigthIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hint_in"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#0F3733"
        android:textColorHint="#74000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2F9AED"
        android:scrollbars="horizontal|none"
        android:selectAllOnFocus="true"
        android:shadowColor="#77ADD8"
        android:shadowDx="10"
        android:shadowDy="10"
        android:singleLine="true"
        android:soundEffectsEnabled="true"
        android:text="Calculate BMI"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Index"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="19sp"
        android:textStyle="italic" />


</LinearLayout>